<h1>Editing card</h1>
 
<%= form_for :card, url: card_path(@card), method: :patch do |f| %>
 
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@card.errors.count, "error") %> prohibited
        this card from being saved:
      </h2>
      <ul>
        <% @card.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :hp %><br>
    <%= f.text_field :hp %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
